<title>@ViewData["Title"] Диаграмма</title>
<div class="text-center text-black-50">
    <h1>Диаграмма</h1>
</div>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.5/jspdf.min.js"></script>

<div id="chart_div"></div>
<input id="save-pdf" class="btn btn-dark btn-sm" value="сохранить в pdf" type ="button"/>
<script type="text/javascript">


    google.charts.load('current', {
        packages: ['corechart', 'bar']
    });
    google.charts.setOnLoadCallback(LoadData);

    function LoadData() {
        $.ajax({

            url: './Chart',
            dataType: "json",
            type: "GET",
            error: function(xhr, status, error) {
                var err = eval("(" + xhr.responseText + ")");
                toastr.error(err.message);
            },
            success: function(data) {
                PopulationChart(data);
                return false;
            }
        });
        return false;
    }

    function PopulationChart(data) {
        var dataArray = [
            ['genreName','count']
        ];
        $.each(data, function(i, item) {
            dataArray.push([item.genreName, item.count]);
        });
        var data = google.visualization.arrayToDataTable(dataArray);
        var options = {
            title: 'Выданные книги по жанрам ',
            chartArea: {
                width: '70%'
            },
            colors: ['#b0120a', '#7b1fa2', '#ffab91', '#d95f02'],
            hAxis: {
                title: 'GenreName',
                minValue: 0
            },
            vAxis: {
                title: 'Количество'
            }
        };
        var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
        var btnSave = document.getElementById('save-pdf');
        chart.draw(data, options);
        btnSave.addEventListener('click', function () {
            var doc = new jsPDF();
            doc.addImage(chart.getImageURI(), 0, 0);
            doc.save('Diagram.pdf');
        }, false);
        return false;
    }
</script>  

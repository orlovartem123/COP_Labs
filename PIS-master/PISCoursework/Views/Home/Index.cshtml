@{
    ViewData["Title"] = "Библиотека";
}

    <div class="text-center">
        <h1 class="display-4">Добро пожаловать</h1>
        @if (Program.Librarian != null)
        {
            <p>
                <strong> Модуль «АРМ библиотекаря»</strong><br />
            </p>
            @if (Program.Librarian != null)
            {
                <hr />
                @Program.Librarian.Role
                <br />
                @Program.Librarian.FIO
                <hr />
            }
        }
        @if (Program.Reader != null)
        {
            <p>
                <strong>Модуль «АРМ читателя»</strong><br />
            </p>
            @if (Program.Reader != null)
            {
                <hr />
                @Program.Reader.Role
                <br />
                @Program.Reader.FIO
                <hr />
            }
        }
        @if (Program.Accountant != null)
        {
            <p>
                <strong> Модуль «АРМ бухгалтера по учету работы библиотекарей» </strong><br />
            </p>
            @if (Program.Accountant != null)
            {
                <hr />
                @Program.Accountant.Role
                <br />
                @Program.Accountant.FIO
                <hr />
            }
        }
    </div>

@model PISBusinessLogic.BindingModels.BookBindingModel
@{
    ViewData["Title"] = "Перекрестный отчет";
    var months = new List<string> { "Январь", "Февраль", "Март", "Апрель", "Май", "Июнь", "Июль", "Август", "Сентябрь", "Октябрь", "Ноябрь", "Декабрь" };
}

<div class="text-center text-black-50">
    <h1>Перекрестный отчет</h1>
</div>
<form asp-controller="User" asp-action="Report" method="post">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">По договору:</label>
        <div class="col-sm-4">
            <select class="custom-select" name="GenreId" id="GenreId">
                <option value="" selected disabled hidden>Выберите договор</option>
                @foreach (var contract in ViewBag.Contracts)
                {
                    <option value="@contract.Id">@contract.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">По месяцу:</label>
        <div class="col-sm-4">
            <select class="custom-select" name="GenreId" id="GenreId">
                <option value="" selected disabled hidden>Выберите месяц</option>
                @foreach (var genre in months)
                {
                    <option value="genre">@genre</option>
                }
            </select>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <div class="col-sm-4">
            <input type="submit" value="Сформировать" class="btn btn-dark" />
            <hr />
        </div>
    </div>
</form>
<table class="table">
    <tr>
        <td>Название</td>
        <td>Автор</td>
        <td>Жанр</td>
        <td>Издательство</td>
        <td>Год издания</td>
        <td>Цена проката, руб./день</td>
        <td>Статус</td>
    </tr>
    @foreach (var genre in ViewBag.Genres)
        {
            @foreach (var book in ViewBag.Books)
            {
                @if (genre.Id == book.GenreId)
                {

                    <tr>
                        <td>@book.Name</td>
                        <td>@book.Author</td>
                        <td>@genre.Name</td>
                        <td>@book.PublishingHouse</td>
                        <td>@book.Year</td>
                        <td>@genre.Price</td>
                    </tr>
                }
            }
        }
</table>
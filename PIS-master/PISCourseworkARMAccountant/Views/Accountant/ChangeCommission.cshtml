@{
    ViewData["Title"] = "Изменение процента комиссионных";
}


<form asp-controller="Accountant" asp-action="ChangeCommission">

    @Html.ValidationSummary(true, "", new { @style = "color: black" })
    <div class="text-center text-black-50">
        <h3>Процент комиссионных</h3>
    </div>
    <hr />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Библиотекарь:</label>
        <div class="col-sm-4">
            <select class="custom-select custom-select-sm" name="Id" id="Id">
                <option value="" selected disabled hidden>Выберите библиотекаря</option>
                @foreach (PISBusinessLogic.ViewModels.UserViewModel user in ViewBag.Users)
                {
                    if (@user.Role == 0)
                    {
                        <option value="@user.Id">@user.FIO</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Комиссионный процент:</label>
        <div class="col-sm-4">
            <input type="number" value="" step="0.1" min="0" max="10" name="ComissionPercent" />
        </div>
    </div>

    <div class="form-group row">
        <input type="submit" value="Изменить" class="btn btn-dark btn-sm" />

    </div>
</form>
<form asp-controller="Accountant" asp-action="ChangeCommissionAll">
    <div class="text-center text-black-50">
        <h3>Процент комиссионных для всех</h3>
    </div>
    <hr />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Комиссионный процент:</label>
        <div class="col-sm-4">
            <input type="number" value="" step="0.1" min="0" max="10" name="ComissionPercentAll" />
        </div>
    </div>
    <div class="form-group row">
        <input type="submit" value="Изменить для всех" class="btn btn-dark btn-sm" />
    </div>
</form>